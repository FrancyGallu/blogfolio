<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <%= f.label "Title:" %>
    <%= f.text_field :title %>

    <%= f.label "Tags:" %>
    <%= f.select(
            :tags,
            options_from_collection_for_select(
                Tag.not_deleted,
                "id",
                "name",
                @post.get_tag_list,
            ),
            {},
            multiple: true,
            class: "selectize-control multi plugin-remove_button"
        ) %>

    <%= f.label "Body:" %>
    <%= f.text_area :body, size: "12x60" %>

    <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
