<div>
  <div class="row first-row">
    <div class="small-12 small-centered medium-8 large-8 columns">
      <p>
        <%= link_to("← All Posts", posts_path) %>
      </p>
      <h1 class="archive-title">Posts Under “<%= @tag.name.capitalize %>”</h1>

      <div class="archive-item">
        <% @posts.each do |post| %>
            <h2>
              <%= link_to(post.title.capitalize, post_path(post.id)) %>
            </h2>
            <h6 class="date">
              <%= post.created_at.strftime("%B %d, %Y") %>
            </h6>
        <% end %>
        <%= paginate @posts %>
      </div>
    </div>
  </div>
</div>
