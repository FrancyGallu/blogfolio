<div class="row">
  <p>
    <%= link_to("← All Projects", works_path) %>
    <% if user_signed_in? %>
        | <%= link_to 'Edit Project', edit_work_path(@work) %>
    <% end %>
  </p>
  <div class="small-12 medium-7 large-7 columns">
    <h2><%= @work.name %></h2>
    <p>
      <%= @work.description %>
    </p>
  </div>
  <div class="small-12 medium-5 large-5 columns">
    <div class="lined-list">
      <ul>
        <li>
          <strong>Role:</strong>
          <% if @work.role.present? %>
              <%= @work.role.capitalize %>
          <% end %>
        </li>
        <li>
          <strong>Project Type:</strong>
          <% if @work.work_type.present? %>
              <%= @work.work_type.capitalize %>
          <% end %>
        </li>
        <li>
          <strong>Month & Year:</strong>
          <% if @work.date.present? %>
              <%= @work.date.strftime("%B %Y") %>
          <% end %>
        </li>
      </ul>
    </div>
  </div>
</div>

<div class="row">
  <div class="small-12 medium-12 large-12 columns">
    <hr class="project-detail-hr" />

    <% @work_contents.each do |content| %>
        <!-- Begin project image -->
        <div class="project-img">
          <iframe src="<%= content[:url] %>" width="100%" height="480"></iframe>
          <h6><%= content[:caption] %></h6>
        </div>
        <!-- End project image -->
    <% end %>
  </div>
</div>

<div class="row">
  <div class="small-12 medium-12 large-12 columns">
    <p class="back-to-top-holder"><a class="back-to-top"><i class="fa fa-chevron-circle-up fa-3x"></i></a></p>
  </div>
</div>
